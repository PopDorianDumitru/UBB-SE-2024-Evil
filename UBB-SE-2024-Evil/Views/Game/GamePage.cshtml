@model UBB_SE_2024_Evil.Models.Spartacus.Game

@{
    ViewData["Title"] = "Fight";
}

<html>
<head>
    <script href="~/Scripts/Spartacus/GamePage.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/css/Spartacus/GamePage.css" />
    <script src="~/js/Spartacus/GamePage.js"></script>
    <script>
        window.onload = () => {
            var maxHealth = 200;
            $('#player-health-bar').css('width', (@Model.Player.Health / maxHealth * 100) + '%');
            $('#enemy-health-bar').css('width', (@Model.Enemy.Health / maxHealth * 100) + '%');
        }
    </script>
</head>


<body>
    <div class="page">
        <div class="players">
            <div class="player2">
                <div class="circle">
                    <p>Energy: @Model.Player.Energy</p>
                </div>
                <div class="health-bar-container">
                    <div class="health-bar" id="player-health-bar"></div>
                </div>
                <img class="fighter2" src="~/Resources/Spartacus/fighter2.png" />
            </div>
            <div class="player1">
                <div class="circle">
                    <p>Energy: @Model.Enemy.MaxEnergy</p>
                </div>
                <div class="health-bar-container">
                    <div class="health-bar" id="enemy-health-bar"></div>
                </div>
                <img class="fighter1" src="~/Resources/Spartacus/fighter1.png"/>
            </div>
        </div>
        <div>
            <form id="moveForm" class="move">
                <input class="move_inputs" id="inputDamage" type="number"/>
                <div class="cylindrical-container">
                    <p><b>Damage</b></p>
                </div>
                <input class="move_inputs" id="inputBlock" type="number"/>
                <div class="cylindrical-container">
                    <p><b>Block</b></p>
                </div>
                <input type="submit" hidden />
                @* <button id="submitButton">Submit</button> *@
            </form>
        </div>
    </div>
</body>
</html>
