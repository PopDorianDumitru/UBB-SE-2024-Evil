        text-align: center;
    }

    .save-form {
        padding-top: 100px;
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
        background-color: rgba(255,255,255, 0.5);
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
